# ================================
# GAME SCOUT CONFIGURATION
# ================================

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/game_scout

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ================================
# EXTERNAL APIs
# ================================

# YouTube Data API
# Get your key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_MOCK_MODE=true  # Set to 'false' when you have real API key

# TikTok Collection
TIKTOK_MODE=scrape  # Options: 'scrape' or 'api'
TIKTOK_API_URL=
TIKTOK_API_KEY=

# ================================
# LLM CONFIGURATION
# ================================

# LLM Provider (for comment analysis)
LLM_PROVIDER=anthropic  # Options: 'anthropic' or 'openai'
LLM_MODEL=claude-3-5-sonnet-20241022

# Anthropic API
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (alternative)
OPENAI_API_KEY=

# Comment Analysis Settings
COMMENT_SAMPLE_SIZE=200  # Number of comments to analyze per video

# ================================
# COLLECTION SETTINGS
# ================================

# Steam Collection
STEAM_COLLECTION_LIMIT=100  # Max games to collect per run
STEAM_RATE_LIMIT_DELAY=1.0  # Seconds between requests

# Itch.io Collection
ITCH_COLLECTION_LIMIT=50

# Wishlist Rank Collection
WISHLIST_RANK_LIMIT=100  # Top N games to track

# ================================
# SCORING PARAMETERS
# ================================

# Investment Scoring Weights
PP_WEIGHT=0.4  # Product Potential weight
GTM_WEIGHT=0.3  # GTM Execution weight
GAP_WEIGHT=0.3  # GAP Score weight

# External Signals Weights
EWI_WEIGHT=0.5  # External Wishlist Index weight
EPV_WEIGHT=0.5  # External Pattern Validation weight

# ================================
# SCHEDULE CONFIGURATION
# ================================

# Celery Beat Schedule (cron format)
# Collect Steam: Daily at 7:00 Madrid time
# Collect Itch: Daily at 7:15
# Collect Wishlist: Daily at 6:30
# Daily Pipeline: Daily at 7:00 (after other collectors)

# Timezone
TIMEZONE=Europe/Madrid

# ================================
# GOOGLE SHEETS EXPORT (Optional)
# ================================

GOOGLE_SHEETS_CREDENTIALS_FILE=
GOOGLE_SHEET_ID=

# ================================
# DEVELOPMENT
# ================================

# Debug mode
DEBUG=false

# API Host
API_HOST=0.0.0.0
API_PORT=8000

# Log Level
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# ================================
# MORNING SCAN CONFIGURATION
# ================================

# YouTube API (Optional - for video collection)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Morning Scan Defaults
MORNING_SCAN_STEAM_LIMIT=200
MORNING_SCAN_ITCH_LIMIT=800
MORNING_SCAN_SHORTLIST_LIMIT=20
